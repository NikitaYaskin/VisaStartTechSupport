<p id="notice"><%= notice %></p>

<h1>Listing Green Cards</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>Father name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @green_cards.each do |green_card| %>
      <tr>
        <td><%= green_card.first_name %></td>
        <td><%= green_card.second_name %></td>
        <td><%= green_card.father_name %></td>
	<td><%= green_card.phone %></td>
	<td><%= green_card.created_at %></td>
        <td><%= link_to 'Show', green_card %></td>
        <td><%= link_to 'Edit', edit_green_card_path(green_card) %></td>
        <td><%= link_to 'Destroy', green_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

